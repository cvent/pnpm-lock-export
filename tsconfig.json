{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": false,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2017",
    "outDir": "lib"
  },
  "atom": {
    "rewriteTsconfig": true
  },
  "include": ["src/**/*", "typings/**/*"]
}
